/* pages/posts/posts.wxss */

swiper{
  width: 100%;
  height:460rpx;
}

swiper image{
  width:100%;
  height:460rpx;
}

.post-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  border-top:#ededed 1px solid;
  border-bottom : 1px solid #ededed;
  padding-bottom:10rpx;
}
.post-author-date{
  margin-top:10rpx;
  margin-bottom:20rpx;
  margin-left:10rpx;
  display:flex;
  flex-direction:row;
  align-items:center;
}
.post-author{
  width:60rpx;
  height:60rpx;
}
.post-date{
  margin-left:20rpx;
}
.post-title{
  font-size:34rpx;
  font-weight:600;
  margin-bottom:20rpx;
  margin-left:20rpx;
  color:#333333;
}
.post-image{
  width:100%;
  height:340rpx;
  margin-bottom:30rpx;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin-bottom:20rpx;
  margin-left:20rpx;
  line-height:40rpx;
  letter-spacing: 2rpx;
}
.post-like{
  display:flex;
  flex-direction:row;
  align-items: center;
  margin-left:20rpx;
}
.post-like-image{
  margin-right:16rpx;
}
.post-like-font{
  margin-right:32rpx;
  font-size:26rpx;
}